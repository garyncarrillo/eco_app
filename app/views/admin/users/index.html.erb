<h1>Listing posts</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Email</th>
    <th>Role</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Mostrar', admin_user_path(user) %></td>
    <td><%= link_to 'Editar', edit_admin_user_path(user) %></td>
    <td><%= link_to 'Eliminar', admin_user_path(user), :confirm => 'Are you sure?',
                                     :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

